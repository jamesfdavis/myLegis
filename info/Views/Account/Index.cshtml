@{
    ViewBag.Title = "myAccount - myLegis";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section head {
    <meta name="ROBOTS" content="NOINDEX, NOFOLLOW" />
}
@section css {
    @Styles.Render("~/Content/narrowjumbo")
}
<div class="container">
    <!-- Static navbar -->
    <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span
                    class="icon-bar"></span><span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Action("Index", new { Controller = "Home" })">myLegis</a>
        </div>
        <div class="navbar-collapse collapse">
            @Html.Partial("_navbar-primary-navigation")
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown active">
                    @if (User.IsInRole("Admin"))
                    {
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">(admin) myAccount&nbsp;<b
                            class="caret"></b></a>
                    }
                    else
                    {
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">myAccount&nbsp;<b class="caret"></b></a>
                    }
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Index", new { Controller = "acct" })">Account Home</a></li>
                        <li class="divider"></li>
                        <li><a href="@Url.Action("LogOff", new { Controller = "acct" })">Log Out</a></li>
                    </ul>
                </li>
            </ul>
        </div>
        <!--/.nav-collapse -->
    </div>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", new { Controller = "Home" })">Home</a> </li>
        <li class="active">myAccount</li>
    </ol>
    <div class="row">
        <div class="col-md-8" style="margin-top: 5px;">
            <h5 style="margin-left: 5px;">
                Watch List</h5>
            <div class="alert alert-warning alert-dismissable" style="display : none;" data-bind="visible : (Loaded && Empty)">
               <span class="glyphicon glyphicon-info-sign"></span>
                &nbsp;Your Watchlist is empty.
            </div>
            <ul class="list-group" data-bind="foreach: List, visible : List().length > 0">
                <a data-bind="attr { href: Location }" class="list-group-item">
                    <h5 class="list-group-item-heading" data-bind="text : Title">
                    </h5>
                    <span class="badge badge-primary" data-bind="text : Name"></span>
                    <p class="list-group-item-text">
                        &nbsp;
                    </p>
                </a>
            </ul>
        </div>
        <div class="col-md-4" style="margin-top: 15px;">
            &nbsp;
        </div>
    </div>
    <div class="footer">
        @Html.Partial("_footer")
    </div>
</div>
<!-- /container -->
@section scripts {
    @Scripts.Render("~/bundles/acct")
