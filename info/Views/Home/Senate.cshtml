@model List<info.Models.SessionList>
@{
    ViewBag.Title = "Senate - myLegis";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@section css {
    @Styles.Render("~/Content/narrowjumbo")
}
<div class="container">
    <!-- Static navbar -->
    <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span
                    class="icon-bar"></span><span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Action("Index", new { Controller = "Home" })">myLegis</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Senate Legislation</a></li>
                <li><a href="@Url.Action("House")">House Legislation</a></li>
            </ul>
            @Html.Partial("_navbar-myaccount")
        </div>
        <!--/.nav-collapse -->
    </div>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index")">Home</a></li>
        <li class="active">Senate Legislation</li>
    </ol>
    <ul class="nav nav-tabs">
        <li class="active"><a href="#sb" data-toggle="tab">Bills</a></li>
        <li><a href="#sr" data-toggle="tab"><span class="hidden-xs">Resolutions</span><span
            class="visible-xs">Res.</span></a></li>
        <li><a href="#sjr" data-toggle="tab"><span class="hidden-xs">Joint Resolutions</span><span
            class="visible-xs">Joint Res.</span></a></li>
        <li><a href="#scr" data-toggle="tab"><span class="hidden-xs">Concurrent Resolutions</span><span
            class="visible-xs">Con. Res.</span> </a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade in active" id="sb">
            <div class="row">
                <div class="col-md-8" style="margin-top: 5px;">
                    <ul class="list-group">
                        @Html.Partial("_session-bill-list", Model.Where(n => n.Name == @"SB").ToList())
                    </ul>
                </div>
                <div class="col-md-4" style="margin-top: 15px;">
                    @Html.Partial("_panel-definition-bill")
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="sr">
            <div class="row">
                <div class="col-md-8" style="margin-top: 5px;">
                    <ul class="list-group">
                        @Html.Partial("_session-bill-list", Model.Where(n => n.Name == @"SR").ToList())
                    </ul>
                </div>
                <div class="col-md-4" style="margin-top: 15px;">
                    @Html.Partial("_panel-definition-resolution")
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="sjr">
            <div class="row">
                <div class="col-md-8" style="margin-top: 5px;">
                    <ul class="list-group">
                        @Html.Partial("_session-bill-list", Model.Where(n => n.Name == @"SJR").ToList())
                    </ul>
                </div>
                <div class="col-md-4" style="margin-top: 15px;">
                    @Html.Partial("_panel-definition-joint-resolution")
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="scr">
            <div class="row">
                <div class="col-md-8" style="margin-top: 5px;">
                    <ul class="list-group">
                        @Html.Partial("_session-bill-list", Model.Where(n => n.Name == @"SCR").ToList())
                    </ul>
                </div>
                <div class="col-md-4" style="margin-top: 15px;">
                    @Html.Partial("_panel-definition-concurrent-resolution")
                </div>
            </div>
        </div>
    </div>
    <div class="footer">
        @Html.Partial("_footer")
    </div>
</div>
<!-- /container -->
