@model List<info.Models.SessionList>
@{
    ViewBag.Title = "myLegis";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}
@section css {
    @Styles.Render("~/Content/narrowjumbo")
}
<div class="container">
    <!-- Static navbar -->
    <div class="navbar navbar-default" role="navigation">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span
                    class="icon-bar"></span><span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">myLegis</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li class="active"><a href="@Url.Action("Index")">Home</a></li>
                <li><a href="@Url.Action("Senate")">Senate Legislation</a></li>
                <li><a href="@Url.Action("House")">House Legislation</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">myAccount<b
                        class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Index", new { Controller = "Account" })">Account Home</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("LogOff", new { Controller = "Account" })">Log Out</a></li>
                        </ul>
                    </li>
                }
                else
                { 
                    <li><a href="@Url.Action("Index", new { Controller = "Account" })">myAccount</a></li>
                }
            </ul>
        </div>
        <!--/.nav-collapse -->
    </div>
    <ol class="breadcrumb">
        <li class="active">Home</li>
    </ol>
    <div class="jumbotron">
        <h2>
            Alaska Legislature Tracking</h2>
        <p class="lead">
            Track the legislator's bills and resolutions as they make their way through the alaska legislature.</p>
    </div>
    <div class="row marketing">
        <div class="col-lg-6">
            <h4>
                GitHub Compare View</h4>
            <p>
                Compare the differences in a bill as it passes through the process.</p>
        </div>
        <div class="col-lg-6">
            <h4>
                Tracking System</h4>
            <p>
                Login with your Google or Yahoo OpenID account, and track specific legislation.</p>
        </div>
    </div>
    <div class="footer">
        @Html.Partial("_footer")
    </div>
</div>
<!-- /container -->
